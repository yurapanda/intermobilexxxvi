<p id="notice"><%= notice %></p>
<div class = "well well-lg">
<h1>Services</h1>

<table class="table table-striped">
  
    <tr>
      <th>Name</th>
      <th>Price</th>
      <% if current_user.admin?%>
      <th colspan="3"></th>
      <% end %>
    </tr>
  


    <% @services.each do |service| %>
      <tr>
        <td><%= link_to service.name, service%></td>
        <td><%= service.price %></td>
   
        <% if current_user.admin?%>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Delete', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end %>
      </tr>
    <% end %>

</table>

<br>
<% if current_user.admin?%>
<%= link_to 'Add New Offered Service', new_service_path, class: "btn btn-default" %>
<%end %>

<%= link_to 'Back', :back , class: "btn btn-default" %>

</div>